{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Host={DB_HOST};Database={DB_NAME};User Id={DB_USER};Password={DB_PASSWORD};Port={DB_PORT};"
  },
  
  "AppOptions": {
    "SmtpServer": "localhost",
    "SmtpPort": "1025",
    "SmtpEnableSsl": false,
    "SmtpSenderEmail": "noreply@example.com",
    
    "Seed": true,
    "RunInTestContainer": true
  }
}
